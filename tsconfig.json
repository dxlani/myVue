{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    // 允许从没有设置默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    // 启用装饰器
    "experimentalDecorators": true,
    // 允许编译javascript文件
    "allowJs": true,
    "module": "es2015",
    "target": "esnext",
    // 以严格模式解析
    "strict": false,
    // 如何处理模块
    "moduleResolution": "node",
    // 将每个文件作为单独的模块
    "isolatedModules": true,
     // 在表达式和声明上有隐含的any类型时报错
    "noImplicitAny": false,
    "lib": [
      "es2017",
      "dom",
      "es2015",
      "es2015.promise"
    ],
    // 是否包含可以用于 debug 的 sourceMap
    "sourceMap": true,
    "pretty": true
  }
}

